{
  "name": "interface-gestion-vigencias",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Interface de Gestión para Vigencias - Sistema PowerShell optimizado",
  "author": "Interface de Gestión para Vigencias",
  "homepage": "./",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "predist": "npm run build",
    "dist": "electron-builder",
    "clean": "rm -rf dist release node_modules/.cache",
    "full-clean": "npm run clean && npm cache clean --force"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.2.0"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.19",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.interface.vigencias",
    "productName": "Interface de Gestión para Vigencias",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "powershell-bridge/**/*",
      "package.json",
      "assets/**/*",
      "!src/**/*",
      "!**/*.md",
      "!scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "powershell-bridge",
        "to": "powershell-bridge",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "runAfterFinish": false
    },
    "compression": "maximum",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}